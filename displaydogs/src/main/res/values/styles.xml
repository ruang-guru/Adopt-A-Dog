<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextBig" parent="android:Theme">
        <item name="android:textSize">@dimen/text_content</item>
    </style>

    <style name="TextBig.Title" parent="android:Theme">
        <item name="android:textSize">@dimen/text_title_big</item>
    </style>

    <style name="TextSmall" parent="android:Theme">
        <item name="android:textSize">@dimen/text_content</item>
    </style>

    <style name="TextSmall.title" parent="android:Theme">
        <item name="android:textSize">@dimen/text_title_small</item>
    </style>
</resources>
